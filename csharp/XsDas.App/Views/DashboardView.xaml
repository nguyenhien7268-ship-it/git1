<UserControl x:Class="XsDas.App.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="XS-DAS Dashboard" 
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <TextBlock Text="Lottery Analytics System - C# Migration" 
                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                       Opacity="0.6"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <Button Command="{Binding LoadDataCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" Margin="0,0,8,0"/>
                    <TextBlock Text="Load Data"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding ScanNewBridgesCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Magnify" Margin="0,0,8,0"/>
                    <TextBlock Text="Scan Bridges"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding BacktestSelectedBridgeCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ChartLine" Margin="0,0,8,0"/>
                    <TextBlock Text="Backtest"/>
                </StackPanel>
            </Button>

            <ProgressBar IsIndeterminate="True" 
                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                         Width="100"
                         Margin="8,0,0,0"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Bridges DataGrid -->
            <materialDesign:Card Grid.Column="0" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Managed Bridges"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,8"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Bridges}"
                              SelectedItem="{Binding SelectedBridge}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Style="{StaticResource MaterialDesignDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="K1N Lo %" Binding="{Binding K1nRateLo, StringFormat=F2}" Width="Auto"/>
                            <DataGridTextColumn Header="K1N De %" Binding="{Binding K1nRateDe, StringFormat=F2}" Width="Auto"/>
                            <DataGridTextColumn Header="K2N Lo %" Binding="{Binding K2nRateLo, StringFormat=F2}" Width="Auto"/>
                            <DataGridTextColumn Header="K2N De %" Binding="{Binding K2nRateDe, StringFormat=F2}" Width="Auto"/>
                            <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsEnabled}" Width="Auto"/>
                            <DataGridTextColumn Header="Date Added" Binding="{Binding DateAdded}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>

            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Stretch"
                          Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- Recent Results DataGrid -->
            <materialDesign:Card Grid.Column="2" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Recent Results"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,8"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding LotteryResults}"
                              SelectedItem="{Binding SelectedResult}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Style="{StaticResource MaterialDesignDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ky" Binding="{Binding Ky}" Width="*"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="Auto"/>
                            <DataGridTextColumn Header="GDB" Binding="{Binding Gdb}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Status Bar -->
        <materialDesign:Card Grid.Row="3" Margin="0,16,0,0" Padding="12">
            <TextBlock Text="{Binding StatusMessage}"
                       Style="{StaticResource MaterialDesignBody2TextBlock}"/>
        </materialDesign:Card>
    </Grid>
</UserControl>
